---
import Layout from "../layouts/Layout.astro";
import TicketForm from "../components/TicketForm.jsx";
---

<Layout title="Tickets">
  <main>
    <h1>Bestel tickets!</h1>
    <p>
      Via onderstaand formulier kan je zowel tickets bestellen voor de
      loopwedstrijd als de maaltijd.
    </p>
    <p>
      Tickets voor de maaldtijd kunnen ook fysiek bij de leden van de loopclub
      gekocht worden.
    </p>
    <TicketForm client:only />
  </main>
</Layout>
<style is:global>
  #add-ticket {
    position: relative;
  }

  #add-ticket button {
    font-family: var(--heading-font);
    text-transform: uppercase;
    font-weight: 600;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100%;
    font-size: calc(var(--unit-4) / 3);
  }

  #add-ticket button svg {
    width: 2rem;
    height: 2rem;
    margin-left: calc(var(--unit) / 2);
  }

  #add-ticket .items {
    list-style: none;
    margin: 0;
    padding: 0;
    position: absolute;
    width: 100%;
    z-index: 10;
  }

  #add-ticket .items a {
    display: flex;
    text-align: justify;
    text-decoration: none;
    border: 1px solid var(--primary-border);
    border-top: none;
    padding: calc(var(--unit) / 2);
    background-color: var(--primary);
    color: var(--dark);
    font-family: var(--heading-font);
    text-transform: uppercase;
    font-weight: 600;
    cursor: pointer;
    justify-content: space-between;
    align-items: center;
  }

  #add-ticket .items a:hover {
    background-color: var(--primary-hover);
  }

  #add-ticket .items a:focus {
    background-color: var(--dark);
    color: var(--white);
  }

  strong {
    background-color: var(--dark);
    color: var(--white);
    padding: calc(var(--unit) / 4) calc(var(--unit) / 2);
    border-radius: 6px;
    display: inline-block;
    margin-left: var(--unit);
    line-height: 2;
    white-space: nowrap;
    user-select: none;
  }

  .ticket {
    border: 1px solid var(--primary);
    margin: var(--unit) 0;
    padding: calc(var(--unit) / 3);
    border-radius: 6px;
  }

  .ticket .heading {
    padding: calc(var(--unit) / 2);
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .ticket .heading h3 {
    padding: 0;
    margin: 0 calc(var(--unit) / 2);
    font-size: var(--unit);
    text-transform: uppercase;
  }

  .ticket .heading div {
    display: flex;
  }

  .ticket .heading strong.delete {
    background-color: var(--danger);
    cursor: pointer;
    display: flex;
    align-items: center;
  }

  .ticket .heading strong.delete:hover,
  .ticket .heading strong.delete:focus {
    background-color: var(--danger-hover);
  }

  .ticket .heading strong.plus,
  .ticket .heading strong.minus {
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    padding: calc(var(--unit) / 2);
  }

  .ticket .heading strong.plus {
    background-color: var(--success);
  }

  .ticket .heading strong.plus:hover,
  .ticket .heading strong.plus:focus {
    background-color: var(--success-hover);
  }

  .ticket .heading strong.minus {
    background-color: var(--danger);
  }

  .ticket .heading strong.minus:hover,
  .ticket .heading strong.minus:focus {
    background-color: var(--danger-hover);
  }

  .ticket .heading strong.delete svg {
    width: 1.5rem;
    height: 1.5rem;
  }

  .ticket .body {
    border-top: 1px solid var(--trans-dark);
    margin-top: calc(var(--unit) / 2);
    padding-top: calc(var(--unit) / 2);
  }

  .ticket .body > div {
    padding: calc(var(--unit) / 2);
    display: flex;
    justify-content: space-between;
    align-items: center;
    border-bottom: 1px solid var(--grey);
  }

  .ticket .body > div:last-child {
    border-bottom: none;
  }

  .ticket .body label {
    min-width: 150px;
  }

  .ticket .body label.required:after {
    content: "*";
    color: var(--dark);
    font-weight: 600;
    font-family: var(--heading-font);
    font-size: calc(var(--unit-3) / 2);
    display: inline-block;
    margin-left: 2px;
  }

  .ticket .body input {
    flex: 1;
    border-radius: 4px;
    border: 2px solid var(--grey);
    font-size: var(--unit);
    padding: calc(var(--unit) / 2) calc(var(--unit) / 3);
  }

  .ticket .body .radio-container {
    flex: 1;
    display: flex;
  }

  .ticket .body .radio-container label {
    flex: 1;
    min-width: auto;
  }

  .ticket .body input[type="radio"] {
    position: fixed;
    top: -200vh;
  }

  .ticket .body input[type="radio"] + label {
    box-sizing: border-box;
    border: 2px solid var(--primary);
    display: inline-block;
    font-family: var(--heading-font);
    padding: calc(var(--unit) / 2) var(--unit);
    text-align: center;
    color: var(--dark);
    text-transform: uppercase;
    cursor: pointer;
  }

  .ticket .body input[type="radio"] + label:hover {
    background-color: var(--primary-hover);
  }

  .ticket .body input[type="radio"]:checked + label {
    background-color: var(--primary);
  }

  input[type="submit"] {
    display: block;
    float: right;
    text-transform: uppercase;
    font-size: calc(var(--unit-3) / 2);
    padding: var(--unit);
  }

  .loading {
    margin-top: var(--unit-4);
  }

  #error {
    background-color: var(--danger-hover);
    padding: var(--unit);
    color: var(--white);
    margin-top: var(--unit-4);
  }

  #error h2 {
    margin: 0;
  }

  #error a {
    color: var(--dark);
  }
</style>
